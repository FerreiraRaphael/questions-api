    "jsonwebtoken": "^8.1.0",
    "morgan": "^1.7.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^6.1.0",
    "sequelize": "^4.27.0",
    "sequelize-cli": "^3.1.0",
    "serve-favicon": "~2.3.0",
    "sqlite3": "^3.0.8"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "cross-env": "^3.1.3",
    "eslint": "^4.9.0",
